      "returns": {
        "arg": "licitacion",
        "type": "Licitacion"
      }
    },
    "getOfertasBl": {
      "description": "Retrieve ofertas' information from the Blockchain",
      "accepts": {
        "arg": "licitacionId",
        "type": "string"
      },
      "returns": {
        "arg": "ofertas",
        "type": "array"
      }
    },
    "mesaAdministrativa": {
      "description": "Simulates the administrative meeting, revealing company' identities",
      "accepts": {
        "arg": "licitacionId",
        "type": "string"
      },
      "returns": {
        "arg": "result",
        "type": "string"
      }
    },
    "mesaSubjetiva": {
      "description": "Simulates the subjective criteria evalution meeting and gives scores for the offers",
      "accepts": [{
        "arg": "licitacionId",
        "type": "string"
      },
        {
          "arg": "ofertas",
          "type": "array"
        }],
      "returns": {
        "arg": "result",
        "type": "string"
      }
    },
    "mesaObjetiva": {
      "description": "Simulates the objective criteria evalution meeting and gives scores for the offers based on formulae",
      "accepts": {
        "arg": "licitacionId",
        "type": "string"
      },
      "returns": {
        "arg": "result",
        "type": "string"
      }
